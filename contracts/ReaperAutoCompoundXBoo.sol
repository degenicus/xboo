    /**
     * @dev Swaps all {wftm} into {stakingToken}
     */
    function _swapWftmToStakingToken() internal {
        uint256 wftmBalance = IERC20Upgradeable(wftm).balanceOf(address(this));
        if (wftmBalance != 0) {
            IUniswapRouterETH(uniRouter)
